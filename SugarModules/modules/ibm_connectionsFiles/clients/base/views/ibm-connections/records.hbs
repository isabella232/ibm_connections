<div class="tab-pane active">
    {{#if collection.length}}
    <ul class="unstyled listed" data-action="pagination-body">

        {{#each collection.models}}
        <li iid="{{getFieldValue this "id"}}" >
            <div class="pull-right  actions ">
                {{#each ../../row_actions}}
                    {{field ../../../this model=../this}}
                {{!log this}}
                {{/each}}
            </div>

            <p>
                <a href="{{getFieldValue this "url"}}" class="pull-left avatar avatar-md avatar42" data-title="{{getFieldValue this "name"}}">
                    <img src="{{getFieldValue this "picture"}}" alt="{{getFieldValue this "name"}}">
                    </a>

                    <a href="{{getFieldValue this "url"}}">{{getFieldValue this "name"}}</a>

                </p>
                <div class="details">


                    <a target="_blank" href="{{getFieldValue this "view_link"}}">{{str 'LBL_IBM-CONNECTIONS_LIST_FILE_VIEW' this.module}}</a>
                    {{str 'LBL_IBM-CONNECTIONS_LIST_VERSION' this.module}}: {{getFieldValue this "version" "No version"}}
                    {{str 'LBL_IBM-CONNECTIONS_LIST_FILE_SIZE' this.module}}: {{fileSizeFormat attributes.fileSize}}
                </div>
            </li>
        {{/each}}
        {{#notEq ../collection.next_offset "-1"}}
            <li><a class="more" data-action="show-more">{{str "LBL_SHOW_MORE_MODULE" this.module}}</a></li>
        {{/notEq}}
    </ul>
    {{else}}
        <div class="block-footer">{{#if ../collection.dataFetched}}{{str "LBL_NO_DATA_AVAILABLE" this.module}}{{else}}{{str "LBL_LOADING" this.module}}{{/if}}</div>
    {{/if}}
</div>
